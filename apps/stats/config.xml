<?xml version="1.0" encoding="UTF-8" ?>
<app class="Stats">
	<config>
		<param name="numberofchampions">
			<value name="normal">100</value>
		</param>
	</config>
	<permissions default="_READ_ONLY_" logged="_SELF_WRITE_" />

	<load class="Stats" file="stats.class.php" />
	<view name="default" class="Stats" template="statsbig.tpl" />
	
	<header app="header" view="default" />
	<footer app="footer" view="default" />
	
	<view name="mini" class="Stats" template="stats.tpl" />
	<view name="miniconfig" class="Stats" template="statsconfig.tpl" />
	
	<page view="default" />
</app>