<app>	
	<permissions default="_NO_ACCESS_" logged="_SELF_WRITE_" />

	<config>
		<param name="sources">
			<param name="dataview_experiences">
				<param name="public">
						<value>company</value>
						<value>address</value>
						<value>country</value>
						<value>web</value>
						<value>domain</value>
						<value>department</value>
						<value>student_year</value>
						<value>student_jobtitle</value>
						<value>student_project</value>
						<value>student_fullname</value>
				</param>
				<param name="private">
						<value>contact_fullname</value>
						<value>contact_jobtitle</value>
						<value>contact_email</value>
						<value>contact_phone</value>
				</param>
			</param>
		</param>
		<param name="list">
			<value name="maxlines">20</value>
		</param>
	</config>

	<load class="AnyCharArgument"	file="../arguments/anycharargument.class.php" />
	<load class="NumberArgument"	file="../arguments/numberargument.class.php" />

	<load class="KDataView"			file="class/kdataview.class.php" />
	<load class="KDataViewSource"	file="class/kdataviewsource.class.php" />
	<load class="KDataViewRecord"	file="class/kdataviewrecord.class.php" />

	<load class="KDataViewMenu"		file="kdataview.class.php" />

	<load class="DVDefault"			file="default.class.php" />
	<load class="DVList"			file="list.class.php" />
	<load class="DVDetails"			file="details.class.php" />

	<header app="header"	view="default" />
	<footer app="footer"	view="default" />

	<view name="menu"		class="DVMenu"		template="menu.tpl" />

	<view name="default"	class="DVDefault"	template="default.tpl" />
	<view name="list"		class="DVList"		template="list.tpl" />
	<view name="details"	class="DVDetails"	template="details.tpl" />
	
	<page view="default" />
	
	<page name="details"	view="details">
		<argument name="source"	class="AnyCharArgument" />
		<option name="recordid"	class="AnyCharArgument" />
	</page>

	<page name="list" view="list">
		<argument name="source"	class="AnyCharArgument" />
		<option name="pagenum"	class="NumberArgument" />
	</page></app>